{% extends 'layout.html.twig' %}

{% block title %}Editer la propriétée{% endblock %}

{% block body %}
    <a href="{{ path('property_index') }}"><i class="fas fa-long-arrow-alt-left"></i> Revenir à la liste</a>

    <h1 class="propertyTitle">Editer la propriétée</h1>

    <div class="container">
        {{ include('property/_form.html.twig', {'button_label': 'Enregistrer'}) }}
    </div>

    {% if property.pdfFile is not null %}
        {% for file in property.pdfFile %}
            <span class="hidden pdf-file">{{ file }}</span>
        {% endfor %}
    {% endif %}

    {{ include('property/_delete_form.html.twig') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('pdfField') }}
{% endblock %}
